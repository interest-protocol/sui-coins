{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/svg": ["./components/svg"],
      "@/components": ["./components"],
      "@/components/*": ["./components/*"],
      "@/context/*": ["./context/*"],
      "@/constants": ["./constants"],
      "@/constants/*": ["./constants/*"],
      "@/interface": ["./interface"],
      "@/lib": ["./lib"],
      "@/lib/*": ["./lib/*"],
      "@/hooks": ["./hooks"],
      "@/hooks/*": ["./hooks/*"],
      "@/utils": ["./utils"],
      "@/utils/*": ["./utils/*"],
      "@/views/*": ["./views/*"],
      "@/styles": ["./styles"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "interface/declaration.d.ts",
    "views/create-pool/illustration"
  ]
}
